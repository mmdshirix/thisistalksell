{
  "app": "thisistalksell",
  "port": 3000,
  "platform": "docker",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "environments": [
    {
      "name": "NODE_ENV",
      "value": "production"
    },
    {
      "name": "NEXT_TELEMETRY_DISABLED",
      "value": "1"
    }
  ],
  "healthCheck": {
    "path": "/api/health",
    "port": 3000
  },
  "hooks": {
    "postDeploy": ["npm run db:seed"]
  }
}
