{
  "app": "dada",
  "platform": "node",
  "port": 3000,
  "node": {
    "version": "22",
    "mirror": false
  },
  "build": {
    "location": "iran",
    "buildCommand": "npm ci --only=production --no-audit --no-fund --timeout=300000 && npm run build",
    "startCommand": "npm run start"
  },
  "environments": [
    { "name": "production" }
  ],
  "healthCheck": {
    "path": "/api/database/test",
    "port": 3000,
    "initialDelaySeconds": 30,
    "periodSeconds": 10
  }
}
