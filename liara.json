{
  "platform": "node",
  "app": "dada",
  "port": 3000,
  "node": { "version": "22" },
  "build": {
    "location": "iran",
    "installCommand": "pnpm install --frozen-lockfile",
    "buildCommand": "pnpm run build"
  },
  "environments": [ { "name": "production" } ],
  "healthCheck": {
    "path": "/api/database/test",
    "port": 3000,
    "initialDelaySeconds": 30,
    "periodSeconds": 10
  }
}
