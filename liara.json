{
  "platform": "docker",
  "app": "nextjs-chatbot",
  "port": 3000,
  "build": {
    "dockerfile": "Dockerfile"
  },
  "environments": [
    {
      "name": "NODE_ENV",
      "value": "production"
    },
    {
      "name": "NEXT_TELEMETRY_DISABLED",
      "value": "1"
    },
    {
      "name": "PORT",
      "value": "3000"
    }
  ],
  "healthCheck": {
    "path": "/api/health",
    "port": 3000
  },
  "resources": {
    "memory": 512,
    "cpu": 0.5
  }
}
